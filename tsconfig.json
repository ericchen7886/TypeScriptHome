{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "build/dist",
    // "module": "es6",
    // "target": "es3",
    // "lib": [
      // "es5",
      // "dom",
      // "scripthost",
      // "es6",
      // "es2015",
      // "es2016",
      // "es2017",
      // "es2018",
      // "esnext",
      // "es7",
      // "es2015.promise",
      // "es2016.array.include",
    // ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}